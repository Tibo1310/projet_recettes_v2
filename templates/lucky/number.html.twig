{% extends 'base.html.twig' %}

{% block title %}Hello HelloController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .red { color: red; }
</style>

<div class="example-wrapper">
    {% for _ in 1..10 %}
        {% set number = random(1, 100) %} {# Génère un nombre aléatoire entre 1 et 100 #}
        {% if number is even %}
            <h1 class="red" style="background-color: black; color: red;">Tirage au sort {{ number }}</h1>
        {% else %}
            <h1 style="background-color: red; color: black;">Tirage au sort {{ number }}</h1>
        {% endif %}
    {% endfor %}
</div>
{% endblock %}
